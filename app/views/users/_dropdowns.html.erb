<div class="dropdowns">
  <div class="field">
    <%= f.label :email, 'Select your preferred email address' %>

    <div class="control">
      <div class="select">
        <%= f.select :email, @emails,
                     {
                         include_blank: 'None selected',
                         :selected => u.email,
                         :required => true
                     } %>
      </div>
    </div>
  </div>

  <div class="field">
    <%= f.label :category, 'Select all roles that apply to you:' %>

    <div class="control">
      <% categories_selected = (u.category || '').split(',') %>
      <% @categories.map do |key, value| %>
        <div class="field">
          <div class="control">
            <label class="checkbox">
              <%= f.check_box "category_#{value}", :class => 'check-style', :checked => categories_selected.include?(value) %>
              <%= key %>
            </label>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email, 'Select your country (optional)' %>

    <div class="control">
      <div class="select">
        <%= f.country_select :country,
                             {
                                 include_blank: 'None selected',
                                 selected: u.country
                             } %>
      </div>
    </div>
  </div>
</div>
